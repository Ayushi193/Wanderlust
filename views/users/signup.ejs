<%  layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
<form action="/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <lable for="username" class="form-lable">Username</lable>
            <input name="username" id="Username" type="text" class="form-control"
      required/>
      <div class="valid-feedback"> Looks Good</div>
        </div>
        <div class="mb-3">
            <lable for="email" class="form-label">Email</lable>
                <input name="email" id="email" type="text" class="form-control"
          required/>
    
            </div>
            <div class="mb-3">
                <lable for="password" class="form-lable">Password</lable>
                    <input name="password" id="password" type="text" autocomplete="current-password" class="form-control"
              required/>
              
                </div>
                <button>Signup</button>
</form>
    </div>

</div>