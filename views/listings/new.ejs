<%  layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
<br></br>
    <h3>Create a new listing</h3>
    <form  action="/listings" method="POST"  novalidate class="needs-validation"enctype="multipart/form-data">
        <div class="mb-3">
    <lable for="title" class="form-lable">Title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
  required/>
  <div class="valid-feedback">Title Looks Good</div>
    </div>
        
        <div>
            <lable for="description" class="form-lable">Description</lable>
        <input name="listing[description]" placeholder="enter descripton" type="text" class="form-control" required/>
        </div>
        <div>
            <lable for="image" class="form-lable"> Upload Image</lable>
        <input name="listing[image]"  type="file" class="form-control"/>
        </div>
        <div>
            <lable for="price" class="form-lable">Price</lable>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
        </div>
        <div class="valid-feedback">price should be valid</div>
        <div>
            <lable for="country" class="form-lable">Country</lable>
        <input name="listing[country]" placeholder="enter country" type="text"class="form-control" required />
        </div>
        <div>
            <lable for="title" class="form-lable">Location</lable>
        <input name="listing[location]" placeholder="enter location" type="text" required/>
        </div>
        <br></br>
        <button class="btn btn-dark">Add</button>
    </form>
</div>
</div>
